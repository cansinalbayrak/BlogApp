@using WebApp.Data.Entities
@{
    ViewData["Title"] = "Home Page";
}

@model List<Blog>

@{
    foreach(var item in Model)
    {
        <div class="card text-center">
            
            <div class="card-body">
                <img class="card-img-top w-25" src="@item.ImgPath" />
                <h4 class="card-title">@item.BlogHeader</h4>
                <p class="card-text">@item.BlogContent</p>
            </div>
            <div class="card-footer text-muted">
                @item.Date
            </div>

            <div class="card-footer text-muted">
                @item.AppUser.Name
            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-success" asp-action="Edit" asp-controller="Blog" asp-route-Id="@item.Id">Düzenle</a>
            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-success" asp-action="Delete" asp-controller="Blog" asp-route-Id="@item.Id">Sil</a>
            </div>
            
        </div>
    } 


}

