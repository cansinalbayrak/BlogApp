@using WebApp.Data.Entities
@model Blog

<h2>Blog Edit</h2>

<form asp-controller="Blog" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="BlogHeader">Başlık:</label>
        <input type="text" asp-for="BlogHeader" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="BlogContent">İçerik:</label>
        <textarea asp-for="BlogContent" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="TagId">Tag:</label>
        <select asp-for="TagId" asp-items="@(new SelectList(ViewBag.Tags, "Id", "Name"))" class="form-control">
            <option value="">-- Seçiniz --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

